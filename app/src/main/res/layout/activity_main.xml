<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <!-- 输入区域 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/m3_surface_container"
        android:padding="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:boxBackgroundColor="?attr/colorSurface"
        app:hintTextColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入文本内容"
            app:hintEnabled="false"
            android:inputType="textMultiLine|textCapSentences"
            android:padding="12dp"
            android:textColor="?attr/colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- 文本展示区 -->

    <!-- 辅助色分隔条2 -->
    <LinearLayout
        android:id="@+id/textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/m3_surface_container"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Hello World!"
            android:textColor="?attr/colorOnSurface"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

    </LinearLayout>



    <!-- includeFontPadding开关 -->
    <RadioGroup
        android:id="@+id/rgFontPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbox">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbPaddingOn"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:text="启用内边距"
            android:textColor="?attr/colorOnSurface" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbPaddingOff"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:checked="true"
            android:text="禁用内边距"
            android:textColor="?attr/colorOnSurface" />
    </RadioGroup>

    <!-- 滚动控制区 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/resultContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgFontPadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- 字号设置（增加数值显示） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="字号(SP):"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"/>

                <!-- 新增：字号数值显示 -->
                <TextView
                    android:id="@+id/tvTextSizeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <SeekBar
                    android:id="@+id/sbTextSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:max="72"
                    android:progress="12"
                    android:thumbTint="?attr/colorPrimary" />
            </LinearLayout>

            <!-- 字重设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="字重: "
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"/>

                <Spinner
                    android:id="@+id/fontWeightSpinner"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/font_weights"
                    android:popupBackground="?attr/colorSurface"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <!-- 行间距倍数设置（增加数值显示） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbEnableLineHeight"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:checked="true"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="行间距倍数:"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"/>

                <!-- 新增：行间距倍数数值显示 -->
                <TextView
                    android:id="@+id/tvLineMultiplierValue"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="left   "
                    android:text="1.0"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <SeekBar
                    android:id="@+id/sbLineHeightMultiplier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:max="30"
                    android:progress="10"
                    android:thumbTint="?attr/colorPrimary" />
            </LinearLayout>

            <!-- 额外行间距设置（增加数值显示） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <CheckBox
                    android:id="@+id/cbEnableExtraSpacing"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:checked="true"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="额外行间距:"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"/>

                <!-- 新增：额外行间距数值显示 -->
                <TextView
                    android:id="@+id/tvExtraSpacingValue"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="0"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <SeekBar
                    android:id="@+id/sbExtraLineSpacing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:max="50"
                    android:thumbTint="?attr/colorPrimary" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 结果展示区 -->
    <LinearLayout
        android:id="@+id/resultContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/m3_surface_container"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="文本测量结果"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="当前字号（sp）：12"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvMeasuredHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="测量高度（dp）："
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvActualHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="实际高度（dp）："
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvTotalHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="总高度（含内边距，dp）："
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvLayoutHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="布局完成后高度（dp）："
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvFontPaddingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字体内边距（includeFontPadding）：false"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
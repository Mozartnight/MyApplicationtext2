<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 输入区域 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入文本内容"
            android:inputType="textMultiLine|textCapSentences"
            android:lines="5"
            android:minHeight="120dp"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 红色分隔条1 -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="16dp"
        android:background="#ff0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayout" />

    <!-- 文本展示区 -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:includeFontPadding="false"
        android:text="Hello World!"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <!-- 红色分隔条2 -->
    <View
        android:id="@+id/redBox2"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="24dp"
        android:background="#ff0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <!-- includeFontPadding开关 -->
    <RadioGroup
        android:id="@+id/rgFontPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redBox2">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbPaddingOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="启用内边距" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbPaddingOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="禁用内边距" />
    </RadioGroup>

    <!-- 滚动控制区（添加id解决约束问题） -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/resultContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgFontPadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">

            <!-- 字号设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:minWidth="100dp"
                    android:text="字号（sp）: "
                    android:textSize="14sp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTextSize"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="12"
                    android:inputType="numberDecimal"
                    android:text="12"
                    android:textAlignment="center"/>

                <SeekBar
                    android:id="@+id/sbTextSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:max="72"
                    android:progress="12"/>
            </LinearLayout>

            <!-- 字重设置（使用Spinner） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:minWidth="100dp"
                    android:text="字重: "
                    android:textSize="14sp"/>

                <Spinner
                    android:id="@+id/fontWeightSpinner"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/font_weights"/>
            </LinearLayout>

            <!-- 行间距倍数设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:minWidth="100dp"
                    android:text="行间距倍数: "
                    android:textSize="14sp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLineMultiplier"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="1.0"
                    android:inputType="numberDecimal"
                    android:text="1.0"
                    android:textAlignment="center"/>

                <SeekBar
                    android:id="@+id/sbLineHeightMultiplier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:max="30"
                    android:progress="10"/>
            </LinearLayout>

            <!-- 额外行间距设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:minWidth="100dp"
                    android:text="额外行间距（dp）: "
                    android:textSize="14sp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etExtraSpacing"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textAlignment="center"/>

                <SeekBar
                    android:id="@+id/sbExtraLineSpacing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:max="50"/>
            </LinearLayout>

            <!-- 应用按钮 -->
            <Button
                android:id="@+id/btnApply"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:minWidth="120dp"
                android:text="应用设置"/>
        </LinearLayout>
    </ScrollView>

    <!-- 结果展示区 -->
    <LinearLayout
        android:id="@+id/resultContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="文本测量结果"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="当前字号（sp）："
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvMeasuredHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="测量高度（dp）："
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvActualHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="实际高度（dp）："
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvTotalHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="总高度（含内边距，dp）："
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvLayoutHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="布局完成后高度（dp）："
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvFontPaddingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字体内边距（includeFontPadding）：false"
            android:textSize="14sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>